<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path do |f| %>

<% if @contact %>
<p>
	

	<%= @contact.errors.full_messages %>


</p>
<% end %>
<p>

	<%= f.label :email %>
	<%= f.text_field :email %>

</p>

<p>

	<%= f.label :message %>
	<%= f.text_area :message %>

</p>

<%= f.submit 'Send message' %>

<% end %>