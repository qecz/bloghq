<h1>Contact us</h1>


<% #if  @contact.errors.any? #@contact && %>
<p>
<ul>
<%#= @contact.errors.full_messages.each do |msg| %>
<li><%#= msg %></li>
<% #end %>
</ul>
</p>
<% #end %>


<hr>

<%= form_for :contact, url: contacts_path do |f| %>
<p>
	<%= f.label :email %>
	<%= f.text_field :email %>
</p>

<p>
	<%= f.label :message %>
	<%= f.text_area :message %>
</p>
<%= f.submit 'Send message' %>
<% end %>